<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.potato.mapper.Manner_mapper">

<!-- 회원의 매너칭찬 리스트 조회 -->

<!-- 칭찬하기 데이터 전송 -->
<insert id="insertManner" parameterType="com.potato.domain.MannerVO">
	<![CDATA[
    INSERT INTO manner (id, member_number, rating)
    VALUES (#{id}, #{member_number}, #{rating})
    ]]>
</insert>

<!-- 회원별 매너칭찬 리스트 출력 -->
<select id="selectMannerItems" parameterType="String" resultType="com.potato.domain.MannerVO">
	<![CDATA[
	SELECT * FROM manner WHERE member_number = #{member_number}
	]]>
</select>

</mapper>